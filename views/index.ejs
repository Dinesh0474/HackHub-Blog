<div class="author">
    <h1 class="author__heading">HackHub-Blog</h1>
    <p class="author__body">HackHub Blog is your source for tech insights and upcoming hackathon lineups.</p>

</div>



<img src="/img/main-image.jpg" alt="" class="hero-image" width="500px" height="528">


<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id  %>">
                    <span><%= post.title  %></span>
                    <span class="article-list__date "><%= post.createdAt.toDateString()  %></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <% if (nextPage  !== null)  { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&it;
            View Older Posts
        </a>
    <% } %>
      
   
</section>